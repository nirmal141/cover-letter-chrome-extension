{
  "manifest_version": 3,
  "name": "Cover Letter Generator",
  "version": "0.1.1",
  "description": "Scrape job descriptions, combine with your resume, call an LLM, and save a tailored cover letter as PDF.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Generate Cover Letter",
    "default_popup": "src/popup.html"
  },
  "options_page": "src/options.html",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": []
}


